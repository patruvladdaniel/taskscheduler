{% extends "tasks/layout.html.twig" %}

{% block title %} Administer Tasks {% endblock %}
{% block content %}
    <div class="row">
        <div class="col align-middle">
            <span class="title">Tasks</span>
        </div>
        <div class="col">
            <a href="{{ path('route-tasks-organize') }}">
                <button
                        type="button"
                        class="btn btn-outline-primary float-right btn-organise-tasks">
                    Organize tasks
                </button>
            </a>
        </div>
    </div>
    <div class="tasks" id="tasks">
        {% include "tasks/tasks.html.twig" with tasks %}
    </div>
    <form class="add-task">
        <div class="row">
            <div class="col mr-md-3 mb-3 mb-md-0">
                <input class="form-control task-text" name="text" type="text"
                       placeholder="Enter task here..." required/>
            </div>
            <div class="col-12 col-md-3 col-lg-3">
                <span class="enter-hours-icon">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-clock shift-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm8-7A8 8 0 1 1 0 8a8 8 0 0 1 16 0z"></path>
                        <path fill-rule="evenodd" d="M7.5 3a.5.5 0 0 1 .5.5v5.21l3.248 1.856a.5.5 0 0 1-.496.868l-3.5-2A.5.5 0 0 1 7 9V3.5a.5.5 0 0 1 .5-.5z"></path>
                    </svg>
                </span>
                <input class="form-control enter-hours-input" name="hours"
                       type="number" max="20" step="0.25" placeholder="Enter hours..." required/>
                <div class="invalid-feedback">
                    Please input maximum 20 hours.
                </div>
            </div>
        </div>
        <div class="row no-padding-top">
            <button type="submit" class="btn btn-primary add-task">Add task</button>
        </div>
    </form>

{% endblock %}